@{
    ViewBag.Title = "Game";
}
<div class="row">
    <div id="game">
        <ul id="gamepieces">
        </ul>
    </div>
    <div id="questionbar">
        <div id="questionpane">
            <ul>
                <li class="qstn">Do they have brown hair?</li>
                <li class="ansr">No</li>
            </ul>
        </div>
        <input id="questiontext" type="text" />
    </div>
</div>
<div class="modal" id="guessModal">
    <div class="modal-header">
        <a class="close" data-dismiss="modal">×</a>
        <h3>Are you sure you want to guess now?</h3>
    </div>
    <div class="modal-body">
        <p>You are making a guess. If you are wrong you will lose the game. :(</p>
    </div>
    <div class="modal-footer">
        <a id="guess-modal-button" href="#" class="btn btn-primary">Guess</a><a id="cancel-modal-button" href="#" class="btn">Cancel</a>
    </div>
</div>
@section Scripts {
    <script src="~/Scripts/jquery.query.js" type="text/javascript"></script>
    <script src="~/Scripts/js/game.js" type="text/javascript"></script>
}
